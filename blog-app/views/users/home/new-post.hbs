{{!-- navbar --}}
<style>
    html {
        scroll-behavior: smooth;
    }

    body {
        background: #050708;
        padding: 0;
        margin: 0;
    }

    .ls-head {
        align-items: center;
        margin-top: 120px;
        display: flex;
        justify-content: center;
        flex-direction: column;
        margin-bottom: 120px;
    }

    .ls-input {
        width: 100%;
        height: 50px;
        outline: none;
        padding-left: 20px;
        background: #101318;
        color: white;
        border: 2px solid #131c1a;
        border-radius: 20px;
        transition: 0.5s;
    }

    .ls_btn {
        border: 2px solid #131c1a;
        border-radius: 20px;
        padding-left: 20px;
        padding-right: 20px;
        transition: 0.5s;
    }

    .width-100 {
        width: 50%;
    }


    .ls_btn:hover {
        border: 2px solid #2a574d;
    }

    .ls-input:focus {
        border: 2px solid #2a574d;
    }


    .ls-a {
        transition: 0.5s;
    }

    .ls-a:hover {
        color: #2a574d;
    }

    .ls-textArea {
        width: 100%;
        border-radius: 20px;
        outline: none;
        height: 200px;
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 20px;
        background: #101318;
        color: white;
        border: 2px solid #131c1a;
        transition: 0.5s;
    }

    .ls-textArea:focus {
        border: 2px solid #2a574d;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark ">
    <a class="navbar-brand" href="/">Unknown Post</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">Home </a>
            </li>
            <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    {{user.name}}
                </a>
                <div class="dropdown-menu bg-transparent" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item feed-drop text-light" href="/users?id={{user._id}}">Me</a>
                    <a class="dropdown-item feed-drop text-light" href="users/settings?id={{user._id}}">Settings</a>
                    <a class="dropdown-item feed-drop text-light" href="/logout">Logout</a>
                </div>
            </li>
        </ul>
    </div>
</nav>

{{!-- writing page --}}

<section class="ls-head">
    <h1><span class="fas fa-sticky-note"></span> New Post</h1>
</section>

<section class="ls-head">
    <div class="align-content-center width-100">
        <form action="/users/new?id={{user._id}}&name={{user.name}}" method="POST">
            <input type="text" class="ls-input" placeholder="Title" name="title" autocomplete="off" required>
            <br>
            <br>
            <br>
            <textarea class="ls-textArea" placeholder="Write.." name="content" required></textarea>
            <br>
            <br>
            <br>
            <input type="submit" value="Create Post" class="btn ls_btn">
        </form>
    </div>
</section>